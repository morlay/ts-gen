{
  "private": true,
  "scripts": {
    "fmt": "npx prettier --write @morlay/**/src/{,**/}{,**/}*.{ts,json}",
    "clean": "npx lerna exec -- rm -rf lib",
    "clean:js": "npx lerna exec -- rm -rf \"src/{,**/}{,**/}{,**/}*.js*\"",
    "build": "lerna exec -- rollup -c ../../rollup.config.ts",
    "prepare": "npm run clean && npm run clean:js && npm run build && npm run test",
    "test": "tsc --noEmit && jest"
  },
  "lint-staged": {
    "*.{ts,tsx,json}": [
      "npx prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.5.5",
    "@babel/preset-env": "7.5.5",
    "@types/node": "12.6.8",
    "@types/jest": "24.0.15",
    "@types/lodash": "4.14.136",
    "babel-plugin-pure-calls-annotation": "0.2.2",
    "husky": "3.0.1",
    "jest": "24.8.0",
    "lerna": "3.16.4",
    "lint-staged": "9.2.1",
    "prettier": "1.18.2",
    "rollup": "1.17.0",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-typescript": "1.0.1",
    "ts-jest": "24.0.2",
    "ts-node": "8.3.0",
    "typescript": "3.5.3"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      ".+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "tsx",
      "ts",
      "json",
      "jsx",
      "js"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleNameMapper": {
      "@morlay/(.*)": "<rootDir>/@morlay/$1/src"
    },
    "testRegex": ".*/__tests__/.+\\.(generator|test|spec)\\.(ts|tsx)$"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
