{
  "private": true,
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "moduleFileExtensions": [
      "tsx",
      "ts",
      "json",
      "jsx",
      "js"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": ".*/__tests__/.+\\.(test|spec)\\.(ts|tsx)$"
  },
  "scripts": {
    "clean": "npx lerna exec -- rm -rf lib",
    "clean:js": "npx lerna exec -- rm -rf \"src/{,**/}{,**/}{,**/}*.js\"",
    "build": "npx lerna exec -- npx tsc",
    "prepublish": "npm run clean && npm run clean:js && npm run build",
    "test": "jest"
  },
  "lint-staged": {
    "*.{ts,tsx,json}": [
      "npx prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/jest": "22.1.1",
    "@types/node": "9.4.x",
    "jest": "22.1.4",
    "lerna": "2.8.0",
    "lint-staged": "6.1.0",
    "prettier": "1.10.2",
    "ts-jest": "22.0.2",
    "typescript": "2.7.x"
  }
}
