{
  "private": true,
  "scripts": {
    "fmt": "npx prettier --write @morlay/**/src/{,**/}{,**/}*.{ts,json}",
    "clean": "npx lerna exec -- rm -rf lib",
    "clean:js": "npx lerna exec -- rm -rf \"src/{,**/}{,**/}{,**/}*.js*\"",
    "build": "lerna exec -- rollup -c ../../rollup.config.ts",
    "prepare": "npm run clean && npm run clean:js && npm run build && npm run test",
    "test": "tsc --noEmit && jest"
  },
  "lint-staged": {
    "*.{ts,tsx,json}": [
      "npx prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.6.0",
    "@babel/preset-env": "7.6.0",
    "@babel/plugin-proposal-class-properties": "7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "7.5.5",
    "@babel/plugin-transform-typescript": "7.6.0",
    "@types/jest": "24.0.18",
    "@types/lodash": "4.14.138",
    "@types/node": "12.7.5",
    "babel-jest": "24.9.0",
    "babel-plugin-pure-calls-annotation": "0.2.2",
    "babel-plugin-typescript-iife-enum": "0.2.1",
    "husky": "3.0.5",
    "jest": "24.9.0",
    "lerna": "3.16.4",
    "lint-staged": "9.2.5",
    "prettier": "1.18.2",
    "rollup": "1.27.14",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-node-resolve": "5.2.0",
    "typescript": "3.6.3"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "moduleFileExtensions": [
      "tsx",
      "ts",
      "json",
      "jsx",
      "js"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleNameMapper": {
      "@morlay/(.*)": "<rootDir>/@morlay/$1/src"
    },
    "testRegex": ".*/__tests__/.+\\.(generator|test|spec)\\.(ts|tsx)$"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
