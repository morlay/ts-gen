{
  "private": true,
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "moduleFileExtensions": [
      "tsx",
      "ts",
      "json",
      "jsx",
      "js"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": ".*/__tests__/.+\\.(test|spec)\\.(ts|tsx)$"
  },
  "scripts": {
    "exec": "lerna exec --",
    "clean": "npm run exec -- rm -rf lib",
    "clean:js": "npm run exec -- rm -rf \"src/{,**/}{,**/}{,**/}*.js\"",
    "build": "npm run exec -- tsc",
    "prepublish": "npm run clean && npm run clean:js && npm run build",
    "test": "npm run lint && npx jest",
    "lint": "npx tslint -c tslint.json --fix packages/**/src/{,**/}{,**/}*.ts{,x}"
  },
  "devDependencies": {
    "@types/jest": "21.1.6",
    "@types/node": "8.0.x",
    "jest": "21.2.1",
    "lerna": "^2.5.1",
    "ts-jest": "21.2.2",
    "tslint": "5.8.x",
    "typescript": "2.6.x"
  }
}
