{
  "private": true,
  "scripts": {
    "fmt": "npx prettier --write @morlay/**/src/{,**/}{,**/}*.{ts,json}",
    "clean": "npx lerna exec -- rm -rf lib",
    "clean:js": "npx lerna exec -- rm -rf \"src/{,**/}{,**/}{,**/}*.js*\"",
    "build": "lerna exec -- rollup -c ../../rollup.config.ts",
    "prepublish": "npm run clean && npm run clean:js && npm run build && npm run test",
    "test": "jest"
  },
  "lint-staged": {
    "*.{ts,tsx,json}": [
      "npx prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.1.6",
    "@babel/preset-env": "7.1.6",
    "@types/node": "10.12.11",
    "@types/jest": "23.3.10",
    "@types/lodash": "4.14.118",
    "babel-plugin-pure-calls-annotation": "0.1.1",
    "husky": "1.2.0",
    "jest": "23.6.0",
    "lerna": "3.5.1",
    "lint-staged": "8.1.0",
    "prettier": "1.15.3",
    "rollup": "0.67.4",
    "rollup-plugin-babel": "4.0.3",
    "rollup-plugin-typescript": "1.0.0",
    "ts-jest": "23.10.5",
    "ts-node": "7.0.1",
    "typescript": "3.2.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      ".+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "tsx",
      "ts",
      "json",
      "jsx",
      "js"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleNameMapper": {
      "@morlay/(.*)": "<rootDir>/@morlay/$1/src"
    },
    "testRegex": ".*/__tests__/.+\\.(generator|test|spec)\\.(ts|tsx)$"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
