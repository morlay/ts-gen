{
  "private": true,
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "moduleFileExtensions": [
      "tsx",
      "ts",
      "json",
      "jsx",
      "js"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": ".*/__tests__/.+\\.(test|spec)\\.(ts|tsx)$"
  },
  "scripts": {
    "exec": "lerna exec --",
    "clean": "npm run exec -- rm -rf lib",
    "clean:js": "npm run exec -- rm -rf \"src/{,**/}{,**/}{,**/}*.js\"",
    "build": "npm run exec -- tsc",
    "prepublish": "npm run clean && npm run clean:js && npm run build",
    "test": "jest"
  },
  "lint-staged": {
    "*.{ts,tsx,json}": [
      "npx prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/jest": "22.0.1",
    "@types/node": "8.5.x",
    "jest": "22.0.4",
    "lerna": "2.5.1",
    "lint-staged": "6.0.0",
    "prettier": "1.9.2",
    "ts-jest": "22.0.1",
    "tslint": "5.8.x",
    "typescript": "2.6.x"
  }
}
