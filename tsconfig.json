{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./packages",
    "paths": {
      "@morlay/ts-gen-client-from-swagger": [
        "../../ts-gen-client-from-swagger/src"
      ],
      "@morlay/ts-gen-core": [
        "../../ts-gen-core/src"
      ],
      "@morlay/ts-gen-definitions-from-json-schema": [
        "../../ts-gen-definitions-from-json-schema/src"
      ]
    },
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2015",
    "pretty": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules/*",
    "dist/*"
  ]
}
